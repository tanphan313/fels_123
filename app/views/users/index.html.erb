<div class="login">
  <header>
    <h3>
      <%= t "list_user" %>
    </h3>
  </header>
</div>
<div class="container">
  <div class="row">
    <div class="col s12">
      <table class="striped">
        <thead>
        <tr>
          <th data-field="title"><%= t "full_name" %></th>
          <th data-field="option"><%= t "follow" %></th>
        </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to user.fullname, user %>
              </td>
              <td>
                <div id="follow-form-<%= user.id %>">
                  <% if logged_in? %>
                    <% if current_user? user %>
                      <i class="material-icons">
                        assignment_ind
                      </i>
                    <% elsif current_user.is_following user %>
                      <%= render "users/unfollow", user: user %>
                    <% else %>
                      <%= render "users/follow", user: user %>
                    <% end %>
                  <% else %>
                    <%= link_to t("login_to_use"), login_path %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= will_paginate %>
</div>
