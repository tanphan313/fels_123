<div class="row">
  <div class="col s4">
    <h3><%= t "basic_info" %></h3>
    <div class="row">
      <div class="col s6">
        <div class="avatar">
          <%= image_tag @user.avatar if @user.avatar? %>
        </div>
      </div>
      <div class="col s12">
        <h5><%= @user.fullname %></h5>
      </div>
    </div>
    <% if current_user? @user %>
      <div class="row">
        <div class="col s12">
          <%= link_to t("edit_profile"), edit_user_path(current_user),
            class: "btn waves-effect waves-light" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col s8">

  </div>
</div>
