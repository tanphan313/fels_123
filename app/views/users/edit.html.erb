<div class="container-fluid">
  <div class="row">
    <div class="col s4 push-s4">
      <div class="login">
        <header><%= t "edit_profile" %></header>

        <%= form_for @user do |f| %>
          <%= render "shared/error_notice", object: @user %>

          <div class="input-field col s12">
            <%= f.text_field :fullname,class: "input-field", required: true %>
            <%= f.label :fullname, t("full_name") %>
          </div>

          <div class="input-field col s12">
            <%= f.email_field :email, required: true %>
            <%= f.label :email, t("email") %>
          </div>

          <div class="file-field col s12 input-field">
            <div class="btn">
              <span><%= t "avatar" %></span>
              <%= f.file_field :avatar %>
            </div>
            <div class="file-path-wrapper">
              <input class="file-path validate" type="text">
            </div>
          </div>

          <%= f.submit t("edit_profile"), class: "btn waves-effect waves-light" %>

        <% end %>
      </div>
    </div>
  </div>
</div>
