<tr>
  <td>
    <%= link_to category.title, admin_category_path(category) %>
  </td>
  <td>
    <%= link_to t("delete"), [:admin, category], method: :delete,
      data: {confirm: t("confirm")},
      class: "btn waves-effect waves-light red lighten-1" %>
  </td>
  <td>
    <%= link_to t("update"), edit_admin_category_path(category),
      class: "btn waves-effect waves-light green lighten-1" %>
  </td>
</tr>
