<div class="container-fluid">
  <div class="row">
    <div class="col s3 avatar_admin_update">
      <%= show_avatar @user %>
    </div>
    <div class="col s4 push-s1">
      <div class="login">
        <header><%= t "edit_profile" %></header>
        <%= form_for [:admin, @user] do |f| %>
          <%= render "shared/error_notice", object: @user %>

          <div class="input-field col s12">
            <%= f.text_field :fullname,class: "input-field", required: true %>
            <%= f.label :fullname, t("full_name") %>
          </div>

          <div class="input-field col s12">
            <%= f.email_field :email, required: true %>
            <%= f.label :email, t("email") %>
          </div>

          <div class="input-field col s12">
            <%= f.check_box :admin %>
            <%= f.label :admin, t("admin_role") %>
          </div>

          <div class="input-field col s12">
            <%= f.password_field :password, class: "validate", required: true %>
            <%= f.label :password, t("password") %>
          </div>

          <div class="input-field col s12">
            <%= f.password_field :password_confirmation, required: true %>
            <%= f.label :password_confirmation, t("password_confirmation") %>
          </div>

          <div class="file-field col s12 input-field">
            <div class="btn">
              <span><%= t "avatar" %></span>
              <%= f.file_field :avatar %>
            </div>
            <div class="file-path-wrapper">
              <input class="file-path validate" type="text">
            </div>
          </div>

          <%= f.submit t("edit_profile"), class: "btn waves-effect waves-light" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
