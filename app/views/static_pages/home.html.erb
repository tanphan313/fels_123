<div class="login">
  <header>
    <h3><%= t "e_learning_system" %></h3>
  </header>
</div>
<% if logged_in? %>
  <div class="row">
    <div class="col s3">
      <div class="row">
        <div class="col s12">
          <div class="avatar">
            <%= image_tag current_user.avatar if current_user.avatar? %>
          </div>
        </div>
        <div class="col s12">
          <h5><%= current_user.fullname %></h5>
        </div>
      </div>
    </div>
    <div class="col s9">
      <div class="row">
        <div class="col s6 col-btn-header">
          <%= link_to t("list_word_title"), words_path, class: "btn-large waves-effect waves-light" %>
        </div>
        <div class="col s6 col-btn-header">
          <%= link_to t("lesson_title"), categories_path, class: "btn-large waves-effect waves-light" %>
        </div>
      </div>
      <div class="row">

      </div>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="col s12">
      <%= render "categories/index_category" %>
    </div>
  </div>
<% end %>
